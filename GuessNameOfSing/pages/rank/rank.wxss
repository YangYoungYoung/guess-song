/* pages/ranking/ranking.wxss */
.container_ranking{
  display: flex;
  flex-direction: column;

  align-items: center;
  height: 100%;
}
.one{
  border-radius: 100rpx;
  background-color: #ff3a7b;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
  width: 450rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;  
  align-items: center;
  text-align: center;
  justify-content: center;
}
.show_text{
  width: 200rpx;
  height: 45rpx;
  color: white;
}
.box{
  margin-top: 30rpx;
  width: 650rpx;
  height:150rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #29b1eb
}
.box2{
  margin-top: 25rpx;
  display: flex;
  flex-direction: row;
  width: 500rpx;
}
.crown{
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 80rpx;
  height: 70rpx;
  margin-right: 15rpx
}
.crown-end{
  display: flex;  
  flex-direction: column;  
  align-items: center;
  justify-content: center;
  background-color: #417d95;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
  color: #18ff90;
}
.head{
  margin-left: 20rpx;
  width: 106rpx;
  height: 106rpx;  
}
.avatar { 
  border: 6rpx solid #fff;
  width: 110rpx;  
  height: 110rpx;   
  border-radius: 50% 
} 
.nickname { 
  margin-top: 30rpx;
  width: 230rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;  
  margin-right: 50rpx;
  margin-left: 15rpx;
  color: white; 
  font-size: 32rpx; 
  font-weight: 400
}  
.num{
  align-items: center;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-end;
  margin-right: 10rpx;
  
}
.text{
  color: white; 
  font-size: 30rpx
}
.text1{
  color:yellow;
  font-size: 35rpx
}
.bottom{
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
 
}
.black{
  background-color: black;
  height: 120rpx;
  width: 650rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.num2{
  
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-end
}
.mine{
  
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center
}
.nickname2{
 margin-left: 20rpx;
 width: 250rpx;
  color: white; 
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 32rpx; 
  font-weight: 400
}
.mine{
  margin-right: 20rpx;
  color:white; 
  font-size: 32rpx; 
  direction: flex;
  flex-direction: row wrap;
  align-items: flex-start;
  font-weight: 400
}
.number{
  color: #18ff90
}
.show{  
  background-color: #ff3a7b;
  border-radius: 100rpx;
  margin-top: 40rpx;
  width: 400rpx;
  height: 110rpx;
  display: flex;  
  flex-direction: row;  
  align-items: center;
  justify-content: center;
  text-align: center;
  
}

.image_note{
  width: 50rpx;
  height: 50rpx;
  padding-right: 50rpx;
  margin-left: -50rpx;
}

.show_button{
  display: block;  
  flex-direction: column;  
  align-items: center;
  text-align: center;
  justify-content: center;
  background-color:#ff3a7b;
  border-radius: 100rpx;
  color: white;
  width: 250rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}
.show_button::after{
  border: none;
}
 
