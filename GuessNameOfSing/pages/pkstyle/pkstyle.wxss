/* pages/pkstyle/pkstyle.wxss */

page {
  height: 100%;
  width: 100%;
}

.main {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.title {
  width: 100%;
  height: 230rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 44rpx;
}

.leftview {
  display: block;
  width: 226rpx;
  height: 172rpx;
}

.blueview {
  width: 100%;
  height: 100%;
  display: block;
}

.userimage {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  display: block;
  margin-top: -150rpx;
  margin-left: 60rpx;
}

.rivalimage {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  display: block;
  margin-top: -150rpx;
  margin-left: 40rpx;
}

.pinkview {
  width: 100%;
  height: 100%;
  display: block;
}

.progress {
  position: relative;
  width: 230rpx;
  height: 230rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.rightview {
  display: block;
  width: 226rpx;
  height: 172rpx;
}

.username {
  width: 100%;
  font-size: 32rpx;
  margin-top: 20rpx;
  display: block;
}

.content {
  width: 100%;
  height: 720rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 60rpx;
}

.userscore{
  width: 92rpx;
  font-size: 60rpx;
  color: #e43840
}
.content_left{
  width: 92rpx;
  height: 100%;
  display: block;
  margin-left: 50rpx;
}

.pkframe{
  width: 100%;
  height: 100%;
  display: block;
}

.content_right{
  width: 92rpx;
  height: 100%;
  display: block;
  margin-right: 50rpx;
}

.gamechoose {
  width: 300rpx;
  height:300rpx;
  display: block;
  background-color: chartreuse;
}

.choosebtn {
  width: 100rpx;
  height: 88rpx;
}

.bottomview {
  width: 100%;
  height: 176rpx;
  bottom: 0;
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.progress_bg {
  position: absolute;
  width: 220px;
  height: 220px;
  display: block;
}

.progress_canvas {
  width: 220px;
  height: 220px;
  display: block;
}

.progress_txt {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  color: red;
  font-size: 60rpx;
  font-weight: bold;
}
.leftcat{
  width: 78rpx;
  height: 82rpx;
  display: block;
  margin-left: 58rpx;
  margin-bottom: 134rpx;
}

.rivalview{
  width: 78rpx;
  height: 82rpx;
  display: block;
  margin-right: 58rpx;
  margin-bottom: 134rpx;
}
.pk_cat {
  width: 78rpx;
  height: 82rpx;
  display: block;
}



