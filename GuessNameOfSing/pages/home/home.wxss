/* pages/home/home.wxss */

page {
  height: 100%;
  width: 100%;
}

.home-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.home-user-view {
  display: flex;
  flex-direction: row;
  width: 620rpx;
  background-color: #e473e7;
  height: 144rpx;
  border-radius: 10px;
  align-items: center;
  justify-content: space-between;
}

.home-userleft {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-image {
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
  border-radius: 50%;
  background-color: white;
  background-size: cover;
  border: 6rpx solid #fff;
}

.userinfo-nickname {
  display: block;
  color: white;
  margin-left: 18rpx;
}

.userinfo-nicknametext {
  width: 100%;
  display: block;
  font-size: 28rpx;
}

.userinfo-right {
  display: flex;
  flex-direction: row;
}

.userinfo-userinfo-musicnumlogo {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.userinfo-musicnum {
  font-weight: bold;
  color: yellow;
  font-size: 36rpx;
  margin-right: 36rpx;
}

.home-pkstylebtn {
